@model Game

@{
	ViewData["Title"] = Model.Name;
}

<div class="card border-success rounded-3 mt-5 overflow-hidden">
	<div class="card-body p-0">
		<div class="row">
			<di class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
				<div>
					<h4 class="text-success fw-bolder">@Model.Name</h4>
					<span class="badge bg-info fs-5 mb-4">@Model.Category?.Name</span>
					<p class="fs-5">@Model.Description</p>
				</div>
				<div>
					@foreach (var gameDevice in Model.Devices)
					{
						<i class="@gameDevice.Device.Icon me-2 fs-1 text-secondary"></i>
					}
				</div>
			</di>
			<di class="col-md-4">
				<img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100" style="height: 100%;"/>
			</di>
		</div>
	</div>
</div>
